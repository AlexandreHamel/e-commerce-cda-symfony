{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <main class="container my-5">
        <section class="row">
            <div class="col-sm-10 col-lg-6 mx-auto">
                <div class="col-12 p-3 rounded-4 box-reflect">
                    <h1 class="text-dark mb-3 text-center"><i class="fa-solid fa-user" style="color: #000000;"></i> Mon compte</h1>
                    <h4 class="text-dark mb-2 text-center">Bonjour {{app.user.firstname}} {{app.user.lastname}}</h4>
                    <div class="d-flex flex-column justify-content-between">
                        <a href="{{ path('app_profile_edit', {id: user.id})}}" class="btn btn-dark mt-3">Modifier mon compte</a>
                        <a href="{{ path('app_profile_orders', {id: user.id})}}" class="btn btn-dark mt-3">Mes commandes</a>
                    </div>
                    
                </div>
            </div>
        </section>
    </main>
{% endblock %}

<form method="post" action="{{ path('app_profile_selfdelete', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte? Cette action est irréversible.');">
    <input type="hidden" name="_token" value="{{ csrf_token('selfdelete' ~ user.id) }}">
    <button type="submit" class="btn btn-danger mt-4">Supprimer mon compte</button>
</form>

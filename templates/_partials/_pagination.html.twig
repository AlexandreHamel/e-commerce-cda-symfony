{% if pages > 1 %}
	<nav>
		<ul class="pagination">
			{% if currentPage > 1 %}
				<li class="page-item ">
					<a href=" {{ path(path, {slug: slug, page: currentPage - 1}) }} " class="page-link bg-dark text-light">&lt;</a>
				</li>
			{% else %}
				<li class="page-item disabled">
					<a class="page-link bg-secondary text-light">&lt;</a>
				</li>
			{% endif %}


			{% for page in 1..pages %}
				<li class="page-item {{ (page == currentPage) ? 'active' : '' }} ">
					<a href=" {{ path(path, {slug: slug, page: page}) }} " class="page-link bg-dark text-light">{{ page }}</a>
				</li>
			{% endfor %}
			
				{% if currentPage < pages %}
                <li class="page-item">
					<a href=" {{ path(path, {slug: slug, page: currentPage + 1}) }} " class="page-link bg-dark text-light">&gt;</a>
                </li>    
				{% else %}
                <li class="page-item disabled">
					<a class="page-link bg-secondary text-light">&gt;</a>
                </li>
				{% endif %}
		</ul>
	</nav>
{% endif %}
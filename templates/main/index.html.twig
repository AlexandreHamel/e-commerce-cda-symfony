{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<main class="container my-5">
		<section class="row">
			<div class="col-12">
				<h1>Gaming.shop</h1>
				<p>Bienvenue dans le mond du gaming</p>
			</div>
			{% for category in categories %}
				{% if category.parent == null %}
					<div class="col-12 mt-3">
						<h2>{{ category.name }}</h2>
					</div>
				{% else %}
					<div class="col-4 mb-4 box-reflect">
						<div class="card h-100 bg-secondary">
							<div class="card-body">
								<h3 class="card-title">{{ category.name }}</h3>
								<a href=" {{ path('categories_list', {slug: category.slug}) }} " class="btn btn-dark">Voir les produits</a>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</section>
	</main>
{% endblock %}


{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<main class="container my-5">
		<section class="row">
			<div class="col-12 text-center">
				<h1>Gaming.shop</h1>
				<h3>Bienvenue dans le monde du gaming</h3>
			</div>

			{% for productspromotion in productspromotions %}
				{% if productspromotion|length > 0 %}

					<div class="col-8 mt-5 mx-auto">
						<div class="card mb-3 bg-dark text-light" style="max-width: 800px;">
						<div class="row g-0">
							<div class="col-md-4">
								<img src="{{ asset('assets/uploads/promotions/promo1.jpg')}}" class="img-fluid rounded-start" alt="...">
							</div>
							<div class="col-md-8">
								<div class="card-body">
									<h5 class="card-title">{{productspromotion.name}}</h5>
									<p class="card-text">{{productspromotion.description}}</p>
									<p class="card-text">
										<small class="text-body-light">Du
									{{ productspromotion.startDate ? productspromotion.startDate|date('Y-m-d') : '' }}
									au
									{{ productspromotion.endDate ? productspromotion.endDate|date('Y-m-d') : '' }}</small>
									</p>
								</div>
							</div>
						</div>
					</div>
					</div>
					

				{% endif %}
			{% endfor %}

			{% for category in categories %}
				{% if category.parent == null %}
					<div class="col-12 mt-5">
						<h2>{{ category.name }}</h2>
					</div>
				{% else %}
					<div class="col-lg-3 col-md-6 col-12 my-5">
						<div class="card h-100 box-reflect">
							<div class="card-body">
								<h3 class="card-title">{{ category.name }}</h3>
								<a href=" {{ path('categories_list', {slug: category.slug}) }} " class="btn btn-dark">Voir les produits</a>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</section>
	</main>
{% endblock %}

